{
  "manifest_version": 3,
  "name": "Yandex Maps Lead Finder",
  "version": "1.0.0",
  "description": "Find businesses without websites on Yandex Maps - perfect for lead generation",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://yandex.com/*",
    "https://yandex.ru/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://yandex.com/maps*",
        "https://yandex.ru/maps*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "Open Yandex Maps Lead Finder"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
